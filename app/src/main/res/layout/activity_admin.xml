<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123E13"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="ADMIN  PANEL"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/adminAddVenue"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2B782E"
            android:onClick="transitionToAddVenue"
            android:text="Add Venue"
            android:textSize="16dp" />

        <Button
            android:id="@+id/adminEditVenue"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2B782E"
            android:onClick="transitionToVenues"
            android:text="Edit Venues"
            android:textSize="16dp" />

        <Button
            android:id="@+id/adminUpcomingEvents"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2B782E"
            android:onClick="transitionToEvents"
            android:text="Upcoming Events"
            android:textSize="16dp" />

        <Button
            android:id="@+id/adminApproveEvents"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2B782E"
            android:onClick="transitionToApproveEvents"
            android:text="Approve Events"
            android:textSize="16dp" />

        <Button
            android:id="@+id/adminLogOut"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2B782E"
            android:onClick="logOut"
            android:text="Log Out"
            android:textSize="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>